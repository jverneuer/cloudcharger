#include <Arduino.h>

float VOLTAGE_REFERENCE = 5.02;
int NUM_SAMPLES = 10;

void setup(){
  Serial.begin(9600);
  pinMode (25, OUTPUT);
  pinMode(A0, INPUT);
}
void loop(){
  int sampleCount = 0;
  int sum = 0;
  float voltage;
  while (sampleCount < NUM_SAMPLES) {
      sum += analogRead(A0);
      sampleCount++;
      delay(10);
  }
  voltage = ((float)sum / (float)NUM_SAMPLES * VOLTAGE_REFERENCE) / 1024.0;
  Serial.print(voltage);
  Serial.println (" V");
  delay(500);
}